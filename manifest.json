{
	"name": "ABAP Text Search",
	"description": "ABAP Text Search for SAP S/4HANA Public Cloud",
	"version": "1.0",
	"manifest_version": 3,
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
  	"action": {
	},
	"background":{
	  "service_worker": "background.js"
	},
	"permissions": [
		"tabs", 	
		"activeTab",	
		"webRequest",
		"scripting",
		"storage"
	],
	"host_permissions": [
		"https://*.s4hana.cloud.sap/*"
	],
	"content_security_policy": {
		"script-src": "self",
		"object-src": "self"
	},
	"optional_permissions": ["background"]
}